{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend with Bun",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "never",
      "cwd": "${workspaceFolder}/packages/backend",
      "runtimeExecutable": "/home/codespace/.bun/bin/bun",  // Exact path from your system
      "runtimeArgs": [
        "run",
        "--inspect",
        "--hot"
      ],
      "program": "src/index.ts",
      "port": 9229
    }
  ]
}
